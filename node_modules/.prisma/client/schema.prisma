generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/finWise"
}

model User {
  id    Int    @id @default(autoincrement()) // Chave primária com incremento automático
  name  String
  email String @unique // Restringe os valores para que sejam únicos na tabela
}

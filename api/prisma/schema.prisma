generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  nome           String
  email          String   @unique
  celular        String
  senha          String
  dataNascimento DateTime
  saldo          Float    @default(0.0)
  despesas Despesa[]
  receitas Receita[]
}

model Despesa {
  id          Int          @id @default(autoincrement())
  descricao   String
  valor       Float
  tipo        DespesaTipo
  data        DateTime
  user         User         @relation(fields: [usuarioId], references: [id])
  usuarioId   Int

  @@map("despesas")
}

enum DespesaTipo {
  fixo
  conta
  alimentacao
  lazer
  saude
}
model Receita {
  id          Int          @id @default(autoincrement())
  descricao   String
  valor       Float
  tipo        ReceitaTipo
  data        DateTime
  user        User         @relation(fields: [usuarioId], references: [id])
  usuarioId   Int

  @@map("receitas") // mapeia para a tabela 'receitas' no banco
}

enum ReceitaTipo {
  salario
  presente
  outros
}